<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="gridPane" prefHeight="408.0" prefWidth="510.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.etfbl.pj2.gui.InitialController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <center>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <Label text="Unesite broj redova:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="rowsTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Unesite broj kolona:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="columnsTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Button fx:id="confirmButton" onAction="#onConfirmButtonClick" text="Potvrdi" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>
    </center>
   <top>
      <VBox prefHeight="48.0" prefWidth="490.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="ticketsCountLabel" text="Ukupan broj prodatih karata:">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="incomeLabel" text="Ukupan prihod:">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </top>
</BorderPane>
