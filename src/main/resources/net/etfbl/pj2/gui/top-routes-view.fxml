   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="600.0" BorderPane.alignment="CENTER_LEFT">
         <children>
            <ComboBox fx:id="routePickerComboBox" prefWidth="150.0" promptText="Izaberite rutu">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
