         </children>
      </HBox>
   </top>
   <center>
      <TableView fx:id="routeTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="startColumn" prefWidth="150.0" text="Polazak" />
          <TableColumn fx:id="destinationColumn" minWidth="0.0" prefWidth="125.0" text="Dolazak" />
            <TableColumn fx:id="timeColumn" prefWidth="157.0" text="Vrijeme" />
            <TableColumn fx:id="priceColumn" prefWidth="167.0" text="Cijena" />
        </columns>
      </TableView>
   </center>
